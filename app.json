{
  "expo": {
    "name": "SuperTaxi",
    "slug": "supertaxi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/taxi.png",
    "scheme": "supertaxi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/taxi.png",
        "backgroundColor": "#405673"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/taxi.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#405673",
          "image": "./assets/images/taxi.png",
          "dark": {
            "image": "./assets/images/taxi.png",
            "backgroundColor": "#405673"
          },
          "imageWidth": 200
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
